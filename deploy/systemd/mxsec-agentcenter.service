[Unit]
Description=Matrix Cloud Security Platform AgentCenter (gRPC Server)
Documentation=https://github.com/mxsec-platform/mxsec-platform
After=network.target mysql.service
Wants=mysql.service

[Service]
Type=simple
User=root
Group=root
WorkingDirectory=/opt/mxsec-platform
ExecStart=/usr/bin/mxsec-agentcenter -config /etc/mxsec-platform/server.yaml
Restart=always
RestartSec=10
StandardOutput=journal
StandardError=journal
SyslogIdentifier=mxsec-agentcenter

# 安全设置
NoNewPrivileges=true
PrivateTmp=true
ProtectSystem=strict
ProtectHome=true
ReadWritePaths=/opt/mxsec-platform /var/log/mxsec-platform /etc/mxsec-platform/certs
ReadOnlyPaths=/etc/mxsec-platform/server.yaml

# 资源限制
LimitNOFILE=65536
LimitNPROC=4096
MemoryLimit=2G
CPUQuota=200%

# 环境变量
Environment="TZ=Asia/Shanghai"

[Install]
WantedBy=multi-user.target
