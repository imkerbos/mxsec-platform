[Unit]
Description=Matrix Cloud Security Platform Agent
Documentation=https://github.com/mxcsec-platform/mxcsec-platform
After=network.target

[Service]
Type=simple
User=root
Group=root
ExecStart=/usr/bin/mxcsec-agent
Restart=always
RestartSec=10
StandardOutput=journal
StandardError=journal
SyslogIdentifier=mxcsec-agent

# 安全设置
NoNewPrivileges=true
PrivateTmp=true
ProtectSystem=strict
ProtectHome=true
ReadWritePaths=/var/lib/mxcsec-agent /var/log/mxcsec-agent

# 资源限制
LimitNOFILE=65536
LimitNPROC=4096
MemoryLimit=1G
CPUQuota=100%

# 环境变量
Environment="TZ=Asia/Shanghai"

[Install]
WantedBy=multi-user.target
