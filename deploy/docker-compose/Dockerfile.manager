FROM golang:1.25-alpine AS builder

WORKDIR /build

# 复制 go mod 文件
COPY go.mod go.sum ./
RUN go mod download

# 复制源代码
COPY . .

# 构建 Manager
RUN CGO_ENABLED=0 GOOS=linux go build -ldflags "-s -w" -o manager ./cmd/server/manager

# 运行阶段
FROM alpine:latest

RUN apk --no-cache add ca-certificates tzdata curl

WORKDIR /app

# 复制二进制文件
COPY --from=builder /build/manager /app/manager

# 设置时区
ENV TZ=Asia/Shanghai

# 暴露端口
EXPOSE 8080

# 运行
ENTRYPOINT ["/app/manager"]
