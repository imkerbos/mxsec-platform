FROM golang:1.25-alpine AS builder

WORKDIR /build

# 复制 go mod 文件
COPY go.mod go.sum ./
RUN go mod download

# 复制源代码
COPY . .

# 构建 AgentCenter
RUN CGO_ENABLED=0 GOOS=linux go build -ldflags "-s -w" -o agentcenter ./cmd/server/agentcenter

# 运行阶段
FROM alpine:latest

RUN apk --no-cache add ca-certificates tzdata netcat-openbsd

WORKDIR /app

# 复制二进制文件
COPY --from=builder /build/agentcenter /app/agentcenter

# 设置时区
ENV TZ=Asia/Shanghai

# 暴露端口
EXPOSE 6751

# 健康检查
HEALTHCHECK --interval=30s --timeout=10s --start-period=40s --retries=3 \
  CMD nc -z localhost 6751 || exit 1

# 运行
ENTRYPOINT ["/app/agentcenter"]
